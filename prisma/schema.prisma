datasource db {
    provider = "postgresql"
    url      = env("DATABASE_URL")
}

generator client {
    provider = "prisma-client-js"
}

model User {
    id        Int      @id @default(autoincrement())
    username  String   @unique
    password  String
    role      String   @default("user")
    createdAt DateTime @default(now())

    // Webhooks customizados por usuário
    webhookSendMessage     String?
    webhookCreateInstance  String?
    webhookVerifyInstance  String?
    webhookConnectInstance String?
    webhookDeleteInstance  String?

    contacts  Contact[]
    images    Image[]
    groups    Group[]
    selection Selection?
    templates MessageTemplate[]
    instances Instance[]
}

model Contact {
    id        Int            @id @default(autoincrement())
    nome      String
    telefone  String         @unique
    userId    Int
    user      User           @relation(fields: [userId], references: [id])
    createdAt DateTime       @default(now())
    updatedAt DateTime       @updatedAt
    groups    ContactGroup[]
}

model Group {
    id        Int            @id @default(autoincrement())
    nome      String
    descricao String?
    userId    Int
    user      User           @relation(fields: [userId], references: [id])
    createdAt DateTime       @default(now())
    updatedAt DateTime       @updatedAt
    contacts  ContactGroup[]

    @@unique([userId, nome])
}

model ContactGroup {
    id        Int      @id @default(autoincrement())
    contactId Int
    groupId   Int
    contact   Contact  @relation(fields: [contactId], references: [id], onDelete: Cascade)
    group     Group    @relation(fields: [groupId], references: [id], onDelete: Cascade)
    createdAt DateTime @default(now())

    @@unique([contactId, groupId])
}

model Image {
    id        Int      @id @default(autoincrement())
    url       String
    filename  String
    userId    Int
    user      User     @relation(fields: [userId], references: [id])
    createdAt DateTime @default(now())
}

model Selection {
    id          Int      @id @default(autoincrement())
    user        User     @relation(fields: [userId], references: [id])
    userId      Int      @unique
    selectedIds Json
    updatedAt   DateTime @updatedAt
}

model MessageTemplate {
    id        Int      @id @default(autoincrement())
    userId    Int
    user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
    name      String
    content   String
    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt

    @@unique([userId, name])
}

model Instance {
    id           Int      @id @default(autoincrement())
    userId       Int
    user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
    instanceName String // Nome da instância (ex: "minha-instancia-1")
    status       String   @default("disconnected") // "disconnected", "connecting", "online"
    qrCode       String? // QR code para conexão
    lastUpdate   DateTime @default(now())
    createdAt    DateTime @default(now())
    updatedAt    DateTime @updatedAt

    @@unique([userId, instanceName])
}
